# Run `swaymsg -t get_tree` to get a list of properties needed for the below to work.

for_window {
	[app_id="firefox" title="^Picture-in-Picture$"] floating enable; sticky enable
	[app_id="firefox" title="^Extension: \(Bitwarden Password Manager\) - Bitwarden . Mozilla Firefox$"] floating enable; sticky enable

    [app_id= "thunderbird-esr" title="^$"] floating enable
}

# Toggle the current focus between tiling and floating/scratchpad mode
# Scratchpad window visibility are meant to be quickly toggled.
# Floating windows are meant to stay on top.
bindsym $mod+Shift+f floating toggle

# Swap focus between the tiling area and the floating area
bindsym $mod+Shift+$alt+f focus mode_toggle

# vim:ft=swayconfig:
